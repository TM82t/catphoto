<div class="container">
    <div class="row">
      <div class="col-md-12">
      <h3><%= @end_user.end_user_name %>さんの会員詳細</h3>
          <table>
            <body>
              <tr>
                <th>ユーザーID</th>
                <td><%= @end_user.id %></td>
              </tr>
              <tr>
                <th>ユーザー名</th>
                <td><%= @end_user.end_user_name %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @end_user.email %></td>
              </tr>
              <tr>
                <th>会員ステータス</th>
                <td><%= @end_user.is_active ? "有効" : "退会" %></td>
              </tr>
            </body>
          </table>
        <%= link_to "編集する", edit_admin_end_user_path(@end_user.id), class: "btn btn-success mb-4" %>
        <%= link_to "投稿一覧を見る", admin_top_path, class: "btn btn-primary mb-4" %>
      </div>
    </div>
</div>