<div class="inner">
  <h3 class="section-ttl"><%= @end_user.end_user_name %>さんの会員詳細</h3>
  <table class="end_user_info">
    <thead>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    
    <tbody>
      <tr>
        <th>ユーザーID</th>
        <td colspan="2"><%= @end_user.id %></td>
      </tr>
      <tr>
        <th>ユーザー名</th>
        <td colspan="2"><%= @end_user.end_user_name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td colspan="2"><%= @end_user.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td colspan="2"><%= @end_user.is_active ? "有効" : "退会" %></td>
      </tr>
      <tr>
        <td><%= link_to "編集する", edit_admin_end_user_path(@end_user.id), class: "btn btn-success mb-4" %></td>
      </tr>
    </tbody>
  </table>
</div>