<section class="inner">
	<h2 class="section-ttl"><%= @end_user.name %> さんの会員情報編集</h2>
	<%= form_with model:@end_user, url: admin_end_user_path(@end_user) do |f| %>
		<%= render 'layouts/error_messages', resource: @end_user %>
		<table class="customer_info customer_form">
			<thead>
				<th></th>
				<th></th>
				<th></th>
			</thead>
			<tbody>
				<tr>
					<td>ユーザー名</td>
					<td><%= f.label :name, class: "customer_name", :placeholder =>"#{@end_user.name}" %> </td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@end_user.email}" %></td>
				</tr>
				<tr>
					<td>郵便番号(7桁)</td>
					<td colspan="2"><%= f.text_field :postal_code, :placeholder =>"#{@end_user.postal_code}" %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td colspan="2" class="field_for_address"><%= f.text_field :address, :placeholder =>"#{@end_user.address}" %></td>
				</tr>
				<tr>
					<td>電話番号(ハイフンなし10or11桁)</td>
					<td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"#{@end_user.telephone_number}" %></td>
				</tr>
				<tr>
					<td>会員ステータス</td>
					<td><%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", class: "text-active" %></td>
					<td><%= f.radio_button :is_active, false %><%= f.label :is_active, "退会済み", class: "text-invalid" %></td>
				</tr>
				<tr>
					<td colspan="3"><%= f.submit "更新", class: "btn btn-primary" %></td>
				</tr>
			</tbody>
		</table>
	<% end %>
</section>