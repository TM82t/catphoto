<div class="container">
  <div class="row no-gutters">
   <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
     <h5 class="text-dark bg-light py-4 mb-0">管理者ログイン</h2>

     <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
       <div class="field mb-3">
         <%= f.label :email, "メールアドレス" %><br />
         <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       </div>

       <div class="field mb-3">
         <%= f.label :password, "パスワード" %><br />
         <%= f.password_field :password, autocomplete: "current-password" %>
       </div>

       <div class="actions mb-4">
         <%= f.submit "ログイン", class: "btn btn-primary" %>
       </div>
     <% end %>

    </div>
  </div>
</div>