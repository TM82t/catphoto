<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">新規登録</h5>
      <div class="form-body p-4">

        <%= form_with model: @end_user, url: registration_path(resource_name), local: true do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

 　          <div class="field">
 　            <%= f.label :end_user_name, "(ユーザーネーム)", class: "end_user_name" %><br />
 　            <%= f.text_field :end_user_name, autofocus: true, :placeholder =>"tarou" %>
            </div>

            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)" %><br />
              <%= f.text_field :telephone_number, :placeholder =>"00011112222" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="actions">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
        <% end %>

        <%= render "public/shared/links" %>

  </div>
</div>