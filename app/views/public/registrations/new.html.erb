<h2>新規会員登録</h2>

<%= form_with model: @end_user, url: registration_path(resource_name), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <table class="customer_info customer_form">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td><%= f.label :end_user_name, "(ユーザーネーム)", class: "end_user_name" %> <%= f.text_field :end_user_name, autofocus: true, :placeholder =>"tarou" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
          <td colspan="2"><%= f.text_field :postal_code, :placeholder =>"5420076", class: "jpostal_code" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td colspan="2"><%= f.text_field :address, class: "jpostal_address" %></td>
        </tr>
        <tr>
          <td><%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)" %></td>
          <td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"00011112222" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
          <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>

<%= render "public/shared/links" %>
