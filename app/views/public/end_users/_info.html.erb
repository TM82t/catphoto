<div class="container">
  <div class="row">
    <div class="col-lg-8 text-center">
      <%= image_tag end_user.get_profile_photo(100,100) %>
    </div>

    <div class="col-lg-2 mt-4">
      <% if current_end_user != end_user %>
        <% if current_end_user.following?(end_user) %>
          <%= link_to "フォローを外す", end_user_follows_path(end_user.id), method: :delete, class: "btn btn-info" %>
        <% else %>
          <%= link_to "フォローする", end_user_follows_path(end_user.id), method: :post, class: "btn btn-success" %>
        <% end %>
      <% else %>
        <% if current_end_user.guest_end_user? %>
        <% else %>
          <%= link_to "編集する", edit_information_path(end_user), class: "btn btn-primary ml-2" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table table-hover">
        <thead>
          <th></th>
          <th></th>
        </thead>

        <tbody>
          <tr>
            <td>フォロー</td>
            <td><%= link_to end_user.followings.count, followings_end_user_path(end_user) %></td>
          </tr>
          <tr>
            <td>フォロワー</td>
            <td><%= link_to end_user.followers.count, followers_end_user_path(end_user) %></td>
          </tr>
          <tr>
            <td>いいね</td>
            <td><%= link_to end_user.favorites.count, favorites_end_user_path(end_user) %></td>
          </tr>
          <tr>
            <td>ユーザー名</td>
            <td><%= end_user.end_user_name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= end_user.email %></td>
          </tr>
          <tr>
            <td>プロフィール紹介</td>
            <td><%= end_user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-12"></div>
  </div>

  <div class="row">
    <div class="col-lg-12">
    <h4 class="text-enter">投稿</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>投稿写真名</th>
            <th>説明</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.name %>
                <% end %>
              </td>
              <td><%= post.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>