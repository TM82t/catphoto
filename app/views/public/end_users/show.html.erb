<section class="inner">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
	<h2 class="section-ttl">マイページ</h2>
	<h3>
		登録情報
		<%= link_to "編集する", edit_information_path, class: "btn btn-success ml2" %>
		<%= link_to "パスワードを変更する", edit_end_user_registration_path, class: "btn btn-success ml2" %>
	</h3>
	<table class="customer_info mb3">
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>ユーザー名</td>
				<td>(名) <%= @end_user.name %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @end_user.email %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td colspan="2"><%= @end_user.postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td colspan="2"><%= @end_user.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td colspan="2"><%= @end_user.telephone_number %></td>
			</tr>
		</tbody>
	</table>
</section>