<section class="inner">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
	<h2 class="title">マイページ</h2>
	<h3>
		登録情報

		<%= link_to "編集する", edit_information_path(@end_user), class: "btn btn-primary ml2" %>
		<%= link_to "パスワードを変更する", edit_end_user_registration_path, class: "btn btn-success ml2" %>
	</h3>
	<table class="end_user_info">
		<thead>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>ユーザーネーム</td>
				<td><%= @end_user.end_user_name %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @end_user.email %></td>
			</tr>
		</tbody>
	</table>
</section>